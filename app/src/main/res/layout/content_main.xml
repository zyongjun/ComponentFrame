<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    <include android:id="@+id/appBar"
        layout="@layout/app_actionbar" />
    <TextView
        android:id="@+id/tvTestStageAndroid"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Android进阶之光"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar" />

    <TextView
        android:id="@+id/tvCanvas"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Canvas"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTestStageAndroid" />

    <TextView
        android:id="@+id/tvScroll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="spring scroll"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCanvas" />

</android.support.constraint.ConstraintLayout>